<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox spacing="20" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.preparcial14102025.Controladores.FormularioController">

    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <!-- Encabezado -->
    <Label style="-fx-text-fill: #2c3e50;" text="Añadir Nueva Moto">
        <font>
            <Font name="System Bold" size="28" />
        </font>
    </Label>

    <!-- Formulario -->
    <VBox spacing="15" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <padding>
            <Insets bottom="30" left="30" right="30" top="30" />
        </padding>

        <GridPane hgap="15" vgap="20">
            <!-- Código -->
            <Label fx:id="txtPlaca" style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;" text="Placa" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField fx:id="txtCodigo" promptText="Ingrese la Placa" style="-fx-font-size: 14px; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <!-- Nombre -->
            <Label fx:id="txtMarca" style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;" text="Marca" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="txtNombre" promptText="Imgrese la Marca" style="-fx-font-size: 14px; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <!-- Descripción -->
            <Label fx:id="txtModelo" style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;" text="Modelo" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <TextField fx:id="txtDescripcion" promptText="Ingrese el Modelo" style="-fx-font-size: 14px; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <!-- Precio -->
            <Label fx:id="txtAño" style="-fx-text-fill: #34495e; -fx-font-size: 14px; -fx-font-weight: bold;" text="Año" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="txtPrecio" promptText="Ingrese el Año" style="-fx-font-size: 14px; -fx-padding: 8;" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <columnConstraints>
                <ColumnConstraints minWidth="120" prefWidth="120" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="300" />
            </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <!-- Botones -->
        <HBox alignment="CENTER_RIGHT" spacing="15">
            <VBox.margin>
                <Insets top="20" />
            </VBox.margin>
            <Button fx:id="btnCancelar" onAction="#onCancelar" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 25; -fx-cursor: hand; -fx-background-radius: 5;" text="Cancelar" />
            <Button fx:id="btnGuardar" onAction="#onGuardarProducto" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 25; -fx-cursor: hand; -fx-background-radius: 5;" text="Guardar Moto">
                <font>
                    <Font name="System Bold" size="14" />
                </font>
            </Button>
        </HBox>
    </VBox>


</VBox>
